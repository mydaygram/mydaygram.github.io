---
interface Props {
  page: number;
  pages: number;
}

const { page, pages } = Astro.props;

const visible = pages > 1;

const indicators = Array.from({ length: pages }, (_, i) => i);

// Month abbreviations for pagination
const monthAbbr = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 
                   'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
---

{
  visible && (
    <div class="month-selector">
      {indicators.map((i) => (
        <a
          class={`month-item ${i === page ? 'active' : ''}`}
          href={`/${i === 0 ? "" : i}`}
        >
          {i + 1}
        </a>
      ))}
    </div>
  )
}
